{
  "env": {
    "node" : true,
    "browser": true, 
    "es6": true
  },
  "extends": "eslint:recommended", 
  "parserOptions": {
    "sourceType": "module", 
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [], 
  "rules": {
    "indent": [ 
      "error", 
      "tab",
      { 
        "SwitchCase": 1 
      } 
    ], 
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ], 
    "no-console": [
      "error", 
      { 
        "allow": [
          "warn", 
          "error"
        ] 
      }
    ], 
    "no-unused-vars": [
      "error", 
      { 
        "vars": "all", 
        "args": "none" 
      }
    ]
  }
}